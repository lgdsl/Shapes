<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shapes.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <Canvas fx:id="canvas" height="435.0" onMouseClicked="#onCanvasClick" width="900"/>
  <HBox prefHeight="100.0" prefWidth="200.0">
    <children>
      <TitledPane animated="false" prefHeight="97.0" prefWidth="242.0" text="Добавить фигуру">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
              <VBox prefHeight="200.0" prefWidth="242.0">
                <children>
                  <Label text="Введите количество сторон" />
                  <HBox prefHeight="73.0" prefWidth="242.0">
                    <children>
                      <TextField fx:id="quantityInput">
                        <HBox.margin>
                          <Insets />
                        </HBox.margin></TextField>
                      <Button mnemonicParsing="false" onMouseClicked="#onDrawButtonClick" prefHeight="25.0" prefWidth="93.0" text="Добавить" />
                    </children>
                  </HBox>
                </children>
              </VBox>
            </children>
            <padding>
              <Insets top="10.0" />
            </padding>
          </AnchorPane>
        </content>
      </TitledPane>
      <TitledPane accessibleHelp="" animated="false" prefHeight="97.0" prefWidth="612.0" text="Доступные фигуры">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
              <FlowPane fx:id="radioButtonContainer" prefHeight="70.0" prefWidth="612.0" />
            </children>
          </AnchorPane>
        </content>
      </TitledPane>
    </children>
  </HBox>
</VBox>
